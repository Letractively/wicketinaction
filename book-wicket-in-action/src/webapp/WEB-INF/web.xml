<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
	  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>Wicket In Action</display-name>

	<distributable />

	<!--  
		There are three means to configure Wickets configuration mode and they are
		tested in the order given. 
		1) A system property: -Dwicket.configuration
		2) servlet specific <init-param>
		3) context specific <context-param>
		The value might be either "development" (reloading when templates change)
		or "deployment". If no configuration is found, "deployment" is the default.
	-->
	<context-param>
		<param-name>configuration</param-name>
		<param-value>development</param-value>
	</context-param>

	<filter>
		<filter-name>WicketInAction</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>
				wicket.in.action.WicketInActionApplication
			</param-value>
		</init-param>
		<init-param>
			<param-name>filterPath</param-name>
			<param-value>app</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>WicketInAction</filter-name>
		<url-pattern>/app/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>EchoServlet</servlet-name>
		<servlet-class>
			wicket.in.action.chapter01.section_1_1_2.listing01.EchoServlet
		</servlet-class>
	</servlet>

	<!-- servlet>
		<servlet-name>maverickdispatcher</servlet-name>
